package logic;
import java.util.Scanner;

public abstract class Cuenta {
	
	private int numeroDePlazo;
	private double saldo;
	private String cuentaCliente;
	private Cliente cliente;
	
	Scanner sc = new Scanner(System.in);
	
	public Cuenta(int numero, double saldo, String cuentaCliente, Cliente cliente) {
		this.numeroDePlazo = numero;
		this.saldo = saldo;
		this.cuentaCliente = cuentaCliente;
		this.cliente = cliente;
	}
	public int getNumero() {
		return numeroDePlazo;
	}
	public void setNumero(int numero) {
		this.numeroDePlazo = numero;
	}
	public double getSaldo() {
		return saldo;
	}
	public void setSaldo(double saldo) {
		this.saldo = saldo;
	}
	public String getCuentaCliente() {
		return cuentaCliente;
	}
	public void setCuentaCliente(String cuentaCliente) {
		this.cuentaCliente = cuentaCliente;
	}
	public Cliente getCliente() {
		return cliente;
	}
	public void setCliente(Cliente cliente) {
		this.cliente = cliente;
	}
	
	public void calculoInteres() {
		int opcion;
		
		System.out.println("CALCULO DE INTERES");
		System.out.println("Seleccione el tipo de cuenta:");
		System.out.println("1. Cuenta de ahorros");
		System.out.println("2. cuenta corriente");
		opcion = sc.nextInt();
		
		switch(opcion){
		case 1:
			System.out.println("Interes pactado por el banco?:");
			 numeroDePlazo = sc.nextInt();
			System.out.println("Interes pactado por el banco?:");
			double interes = sc.nextDouble();
			System.out.println("Interes pactado por el banco?:");
			 saldo = sc.nextDouble();
			
		}
		
		
	}
	
	
	
}
