package logic;

public abstract class Cuenta {
	
	private int numeroDePlazo;
	private double saldo;
	private String cuentaCliente;
	private Persona cliente;
	private String banco;
	
	
	
	
	public Cuenta(int numeroDePlazo, double saldo, String cuentaCliente, Persona cliente, String banco) {
		super();
		this.numeroDePlazo = numeroDePlazo;
		this.saldo = saldo;
		this.cuentaCliente = cuentaCliente;
		this.cliente = cliente;
		this.banco = banco;
	}
	public int getNumero() {
		return numeroDePlazo;
	}
	public void setNumero(int numero) {
		this.numeroDePlazo = numero;
	}
	public double getSaldo() {
		return saldo;
	}
	public void setSaldo(double saldo) {
		this.saldo = saldo;
	}
	public String getCuentaCliente() {
		return cuentaCliente;
	}
	public void setCuentaCliente(String cuentaCliente) {
		this.cuentaCliente = cuentaCliente;
	}
	public Persona getCliente() {
		return cliente;
	}
	public void setPersona(Persona cliente) {
		this.cliente = cliente;
	}
	
	public String getBanco() {
		return banco;
	}
	
	public void setBanco(String banco) {
		this.banco = banco;
	}
	
