	public abstract void deposito(double monto);
	public abstract void retiro(double monto);
	public abstract double calculoInteres();
	
	@Override
	public String toString() {
		
		String resultado = "\nINFORMACION DE LA CUENT BANCARIA"
				+ "\nBanco: " + getBanco()
				+ "\nNumero de cuenta: " + getCuentaCliente()
				+ "\nSaldo actual: " + getSaldo()
				+ "\nNumero de plazo (meses): " + getNumero()
				+ "\n" + getCliente().toString();
		
		
		return resultado;
	}
	
	
	
	
}
