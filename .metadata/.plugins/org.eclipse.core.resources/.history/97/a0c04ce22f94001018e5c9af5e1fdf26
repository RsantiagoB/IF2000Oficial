package logic;
import java.util.Scanner;

public abstract class Cuenta {
	
	private int numeroDePlazo;
	private double saldoActual;
	private String cuentaCliente;
	private Persona persona;
	
	Scanner sc = new Scanner(System.in);
	
	public Cuenta(int numero, double saldo, String cuentaCliente, Persona persona) {
		this.numeroDePlazo = numero;
		this.saldoActual = saldo;
		this.cuentaCliente = cuentaCliente;
		this.persona = persona;
	}
	public int getNumero() {
		return numeroDePlazo;
	}
	public void setNumero(int numero) {
		this.numeroDePlazo = numero;
	}
	public double getSaldo() {
		return saldoActual;
	}
	public void setSaldo(double saldo) {
		this.saldoActual = saldo;
	}
	public String getCuentaCliente() {
		return cuentaCliente;
	}
	public void setCuentaCliente(String cuentaCliente) {
		this.cuentaCliente = cuentaCliente;
	}
	public Persona getPersona() {
		return persona;
	}
	public void setPersona(Persona persona) {
		this.persona = persona;
	}
	
	public void calculoInteres() {
		int opcion;
		double interesGanado;
		double porcentajeInteres;
		System.out.println("CALCULO DE INTERES");
		System.out.println("Seleccione el tipo de cuenta:");
		System.out.println("1. Cuenta de ahorros");
		System.out.println("2. cuenta corriente");
		opcion = sc.nextInt();
		
		switch(opcion){
		
		case 1:
			System.out.println("Ingrese el numero de meses de plazo: ");
			 numeroDePlazo = sc.nextInt();
			System.out.println("Ingrese el saldo actual de la cuenta: ");
			 saldoActual = sc.nextDouble();
			 System.out.println("ingrese el porcentaje de interes pactado con el banco: ");
			  porcentajeInteres = sc.nextDouble();
			 
			  interesGanado = (numeroDePlazo * saldoActual * porcentajeInteres) / 100;
			 
			 System.out.println("El interes ganado en la cuenta de ahorros es: " + interesGanado);
			 saldoActual += interesGanado;
			 break;
		case 2:
			
			 System.out.println("Ingrese el saldo actual de la cuenta: ");
			 saldoActual = sc.nextDouble();
			 System.out.println("ingrese el porcentaje de interes pactado con el banco: ");
			  porcentajeInteres = sc.nextDouble();
			 
			  interesGanado = (saldoActual * porcentajeInteres) / 1200;
			 
			 System.out.println("El interes ganado en la cuenta de ahorros es: " + interesGanado);
			 saldoActual += interesGanado;
			 break;
		}
		
		
	}
	
	public abstract void deposito();
	public abstract void retiro();
	
	
}
