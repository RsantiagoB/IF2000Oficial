package main;
import logic.*;

public class Main {

    public static void main(String[] args) {
        
        // Crear cliente
        Persona cliente1 = new Persona("801300495", "Juan Perez", 30, "88214402", "Calle 123");
        
        // Crear cuenta de ahorro
        Cuenta_Ahorro cuentaAhorro1 = new Cuenta_Ahorro(12, 1000.0, "CA123", cliente1, "Banco de Costa Rica", "01/01/2024", 12, 5.0);
        
        System.out.println("=== OPERACIONES BANCARIAS ===");
        
        // Mostrar cuenta inicial
        System.out.println("\n--- Cuenta inicial ---");
        System.out.println(cuentaAhorro1.toString());
        
        // Realizar depósito
        System.out.println("\n--- Realizando depósito de $5000 ---");
        cuentaAhorro1.deposito(5000.0);
        System.out.println(cuentaAhorro1.toString());
        
        // Intentar retiro
        System.out.println("\n--- Intentando retiro de $2000 ---");
        cuentaAhorro1.retiro(2000.0);
        System.out.println(cuentaAhorro1.toString());
        
        // Calcular interés
        System.out.println("\n--- Cálculo de interés ---");
        System.out.println("Saldo con interés: $" + cuentaAhorro1.calculoInteres());
        
        // Probar con cuenta corriente también
        System.out.println("PRUEBA CON CUENTA CORRIENTE");
        
        Cuenta_Corriente cuentaCorriente1 = new Cuenta_Corriente(6, 2000.0, "CC456", cliente1, "Banco nacional", "15/01/2024", 6, 3.0);
        System.out.println(cuentaCorriente1.toString());
    }
}